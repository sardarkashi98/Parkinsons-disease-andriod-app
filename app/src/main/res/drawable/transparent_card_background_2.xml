<!-- res/drawable/transparent_card_background_2.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000" /> <!-- Light shadow color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>

    <!-- Transparent Card with Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#80FFFFFF" /> <!-- Semi-transparent border -->
            <solid android:color="#00000000" /> <!-- Fully transparent background -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>