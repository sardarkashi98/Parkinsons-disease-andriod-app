<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <objectAnimator
            android:propertyName="cardElevation"
            android:duration="100"
            android:valueTo="12dp"
            android:valueType="floatType" />
    </item>
    <item>
        <objectAnimator
            android:propertyName="cardElevation"
            android:duration="100"
            android:valueTo="8dp"
            android:valueType="floatType" />
    </item>
</selector>